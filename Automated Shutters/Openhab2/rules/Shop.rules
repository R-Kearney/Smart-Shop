        if (MSDownTimer!=null) {
            MSDownTimer.cancel
            MSDownTimer = null
        }
        MSDownTimer = createTimer(now.plusSeconds(23)) [| //use now.plusSeconds() for testing
            MShutterDown.sendCommand(OFF)
        ]
    }
end

